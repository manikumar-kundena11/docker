import com.sun.net.httpserver.*;
import java.net.InetSocketAddress;
import java.io.*;

public class LoginWeb {
    public static void main(String[] args) throws IOException {
        HttpServer s = HttpServer.create(new InetSocketAddress(9090), 0);
        s.createContext("/", x -> {
            String m = x.getRequestMethod();
            String r = "<html><body><h2>Login</h2><form method='POST'>User: <input name='u'><br>Pass: <input name='p'><br><input type='submit'></form></body></html>";
            
            if ("POST".equals(m)) {
                String b = new String(x.getRequestBody().readAllBytes());
                // FIXED LOGIC: Checks for "u=admin" AND "p=123" specifically
                if (b.contains("u=admin") && b.contains("p=123")) {
                    r = "<h1>Login Successful</h1>";
                } else {
                    r = "<h1>Access Denied</h1>";
                }
            }
            x.sendResponseHeaders(200, r.length());
            x.getResponseBody().write(r.getBytes());
            x.getResponseBody().close();
        });
        s.start();
        System.out.println("Link: http://localhost:9090");
    }
}

=========================================================================
=========================================================================
============================================================================
sudo docker build -t login-web .
sudo docker run -p 9090:9090 login-web

=========================================================================
=======================================================================================
FROM eclipse-temurin:17-jdk
COPY LoginWeb.java .
CMD ["java", "LoginWeb.java"]
